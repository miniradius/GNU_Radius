BEGIN VENDOR Livingston
ATTRIBUTE       LE-Terminate-Detail     2       string
ATTRIBUTE       LE-Advice-of-Charge     3       string
END
@end group
@end example

@example
@group
BEGIN VENDOR Livingston 307
ATTRIBUTE       LE-Terminate-Detail     2       string
ATTRIBUTE       LE-Advice-of-Charge     3       string
END
@end group
@end example

@noindent
