@node logging example
@subsubsection Example of the @code{logging} statement
@exindex @command{logging} statement

@example
logging @{
        channel default @{
                file "radius.log";
                print-category yes;
                print-priority yes;
        @};
        channel info @{
                file "radius.info";
                print-pid yes;
                print-cons yes;
                print-priority yes;
        @};
        channel notice @{
                syslog auth.notice;
        @};

        category auth @{
                print-auth yes;
                print-failed-pass yes;
        @};
        category notice @{
                channel notice;
        @};
        category info @{
                channel info;
        @};
        category debug @{
                channel info;
                level radiusd=1,files;
        @};

        category *.!debug @{
                channel default;
        @};
@};
@end example

