option {
	max-requests 1024;
};

logging {
        prefix-hook "default_log_prefix";
	channel default {
		file "radius.log";
		print-level yes;
		print-category yes;
		print-pid yes;
		print-milliseconds yes;
	};
	channel debug {
		file "radius.debug";
		print-pid yes;
		print-milliseconds yes;
	};
	category auth {
		channel default;
		print-auth yes;
		print-failed-pass yes;
	};
	category debug {
		channel debug;
		level acct=1,radpdu,radsrv,proxy=100,request,radius;
	};
	category !debug {
		channel default;
	};
};

auth {
	max-requests 127;
	request-cleanup-delay 2;
	detail yes;
	strip-names yes;
	checkrad-assume-logged yes;
};

acct {
	max-requests 127;
	request-cleanup-delay 2;
};

rewrite {
        load-path "@SOURCEDIR@/../raddb";
        load "log-hook.rw";
};

@SNMP@snmp {
@SNMP@         listen no;
@SNMP@         storage {
@SNMP@                  file "@BUILDDIR@/proxy/log/radius.stat";
@SNMP@                  perms 0600;		
@SNMP@	       };
@SNMP@};		

@GUILE@guile {
@GUILE@        debug yes;
@GUILE@        load-path "@BUILDDIR@/raddb";
@GUILE@        load "auth.scm";
@GUILE@        load "acct.scm";
@GUILE@};
