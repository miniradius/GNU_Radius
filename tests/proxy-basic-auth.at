AT_SETUP([Basic Authentication Types (proxy)])
AT_KEYWORDS([proxy-basic-auth])

RA_CHECK([send auth Access-Request User-Name = "accept@remote" 
          expect Access-Accept])

RA_CHECK([send auth Access-Request User-Name = "reject@remote" 
          expect Access-Reject])

RA_CHECK([send auth Access-Request User-Name = "local@remote" \
              User-Password = "guessme" 
          expect Access-Accept])

RA_CHECK([send auth Access-Request User-Name = "local@remote" \
              User-Password = "bad"
          expect Access-Reject])

RA_CHECK([send auth Access-Request User-Name = "crypt@remote" \
              User-Password = "hamlet" 
          expect Access-Accept])

RA_CHECK([send auth Access-Request User-Name = "chap@remote" \
             CHAP-Password = "\001\357\213\343\126\266\311\072\202\020\176\017\121\101\227\155\244" \
             CHAP-Challenge = "0123456789abcdef" 
           expect Access-Accept])

AT_CLEANUP

