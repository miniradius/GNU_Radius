AT_SETUP([huntgroups])
AT_KEYWORDS([huntgroups])

RA_CHECK([send auth Access-Request User-Name = "accept" \
             NAS-IP-Address = 127.0.0.4 \
	     NAS-Port-Id = 2 
          expect Access-Accept])

RA_CHECK([send auth Access-Request User-Name = "accept" \
             NAS-IP-Address = 127.0.0.4 \
	     NAS-Port-Id = 5
          expect Access-Reject])

AT_CLEANUP

